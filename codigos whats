#include <stdio.h>
#include <stdlib.h>
#define tam 20
//codigo que recebe uma letra pra busca e uma string pra ser buscada, imprime o numero de vezes q a letra se repete

int main(int argc, char *argv[]) {
	char vet[tam],l;
	int i,c = 0;
	printf("insira uma letra\n");
	scanf("%c",&l);
	printf("%c\n",l);
	printf("agora insira uma frase\n");
	for(i=0;i<tam;i++){
		scanf("%c",&vet[i]);
			}
	
	for(i=0;i<tam;i++){	
	printf("%c", vet[i]);
		if(vet[i]==l){
			c++;
		}}
		printf("%d",c);
	//esse codigo funciona mas 
	return 0;
}
